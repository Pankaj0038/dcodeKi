				ActionGroup:
					text: "algorithmic cipher"
					mode: 'spinner'
					ActionButton:
						text: "B64 dcode"
						font_size: 20
						pos_hint: {'center_x':0}
						size_hint: (0.20,None)
						height: 50
						on_press: root.press('b64') # On button press send the value 'b64' for base64 decode
					ActionButton:
						text: "B64 ecode"
						font_size: 20
						size_hint: (0.20,None)
						height: 50
						on_press: root.press('b64e')
					ActionButton:
